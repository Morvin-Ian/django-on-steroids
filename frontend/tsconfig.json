{
  "compilerOptions": {
 
    /* Language and Environment */
    "target": "es6",                                 
    "lib": ["es2015", "dom", "dom.iterable"],                                     
    "jsx": "react-jsx",
    "allowJs": true,                                

    /* Modules */
    "module": "esnext",                               
    "rootDir": "./src",                               
    "moduleResolution": "node",                     
    "sourceMap": true,                               
    // "outFile": "dist/bundle.js",
    // "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,     
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true                                
  },

  "include": ["src"],

}


